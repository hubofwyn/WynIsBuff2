{
  "permissions": {
    "allow": [
      "Bash(bun *)",
      "Bash(bunx *)",
      "Bash(git *)",
      "Bash(ls *)",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch",
      "mcp__memory__*",
      "mcp__github__*"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[QUALITY_GATE] $(date -Iseconds) Pre-edit: $CLAUDE_TOOL_INPUT_FILE_PATH\" >> .claude/orchestration.log"
          }
        ]
      }
    ]
  }
}
